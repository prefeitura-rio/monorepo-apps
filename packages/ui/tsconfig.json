{
  "extends": "@ed-rio/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "paths": {
      "@ed-rio/ui/*": ["src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts",
    "src/**/*",
  ],
  "exclude": ["node_modules", "dist"]
}
